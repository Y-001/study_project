/* components/BookList/BookList.wxss */
 .like-list-item{
    margin-bottom: 20rpx;
    display: flex;
}
.like-item-left{
    flex: 2;
    margin-right: 20rpx;
    position: relative;
}
.img-text{
    background-color: #fff;
    padding: 5rpx;
    position: absolute;
    color: #000;
    z-index: 99;
    writing-mode: vertical-lr;
    width: 30%;
    height: 60%;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    transform: translateY(-50%);
}
.like-item-img{
    width: 100%;
    height: 250rpx;
    border-radius: 10rpx;
}
.like-item-right{
    flex: 5;
    display: flex;
    flex-direction: column;
}
.like-right-title{
    flex: 1;
    font-weight: bold;
}
.like-right-desc{
    flex: 2;
    font-size: 32rpx;
    margin: 10rpx 0;
    /* 换行 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.like-right-info{
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.like-info-left{
    font-size: 32rpx;
    color: rgb(136, 136, 136);
    display: flex;
    align-items: center;
}
.circle{
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background-color: rgb(136, 136, 136);
    margin: 0 10rpx;
}

.info-classify{
    padding: 0;
    font-size: 30rpx;
    padding: 1rpx;
    color: rgb(136, 136, 136);
    border-radius: 10rpx;
    border: .5px solid rgb(136, 136, 136);
}