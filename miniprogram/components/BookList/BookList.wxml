<!--components/BookList/BookList.wxml--> 
<view class="like-list-item">
    <view class="like-item-left">
        <image class="like-item-img" src="../../images/bookmoban.jpg"></image>
        <text class="img-text">{{item.name}}</text> 
    </view>
    <view class="like-item-right">
        <view class="like-right-title">{{item.name}}</view>
        <view class="like-right-desc">{{item.desc}}</view>
        <view class="like-right-info">
            <view class="like-info-left">
                <view class="info-author">{{item.author|| '佚名'}}</view>
                <view class="circle"></view>
                <view class="info-num">{{item.dynasty ? item.dynasty:'无'}}</view>
            </view>
            <view class="like-info-right">
                <view class="info-classify">{{item.classify || '无'}}</view>
            </view>
        </view>
    </view>
</view>