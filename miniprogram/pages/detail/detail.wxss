/* pages/detail/detail.wxss */
.book-detail{
     background-color: #fff;
     margin-bottom: 30rpx;
}

.book-manage{
    background-color: #667c70;
    padding: 40rpx;
}
.book-manage-top{
    display: flex;
    margin-bottom: 50rpx;
}
.manage-img{
    width: 250rpx;
    height: 350rpx;
    box-shadow: 0px 0px 10px 0px #ccc;
}
.manage-top-right{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    color: #fff;
}
.manage-top-right .manage-title{
    font-size: 40rpx;
    margin-bottom: 30rpx;
}
.manage-top-right .manage-author{
    margin-bottom: 30rpx;
}
.manage-top-right .manage-num{
    margin-bottom: 30rpx;
}
.manage-top-right .manage-star{
    margin-bottom: 30rpx;
}

.book-manage-bottom{
    display: flex;
    align-items: center;
    justify-content: center;
}
.manage-btn{
    width: 45%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 10rpx;
    padding: 10rpx;
}
.btn-right{
    margin-right: 20rpx;
}
.manage-btn-icon{
    width: 50rpx;
    height: 50rpx;
}
.manage-btn-text{
    padding: 10rpx;
}
/* 简介 */
.book-desc{
    padding: 30rpx;
    line-height: 150%;
}
/* 评论区 */
.talk{
    background-color: #fff;
}
.talk .talk-top{
    display: flex;
    padding: 30rpx;
    justify-content: space-between;
    font-size: 40rpx;
}
.talk-top-right{
    color: #667c70;
}

.talk-avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.talk-content{
    padding: 0 30rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.talk-content-item{
   margin-bottom: 20rpx;
   display: flex;
}
.talk-icon-img{
    width: 40rpx;
    height: 40rpx;
}
.talk-content-right{
    width: 100%;
    padding:0 20rpx;
}
.talk-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
}
.talk-time{
    margin: 10rpx 0;
    color: #666;
    font-size: 28rpx;
}



.talk-comment{
    background-color: #ccc;
    padding: 10rpx;
    margin-top: 15rpx;
    border-radius: 10rpx;
}
.color-name{
    color: #667c70;
}
.talk-comment-list{
    display: flex;
    flex-direction: column;
}
.talk-comment-item{
    font-size: 28rpx;
}
.talk-look-btn{
    font-size: 28rpx;
    padding-top: 10rpx;
}
/* 分割线 */
.comment-line{
    margin-top: 20rpx;
    width: 100%;
    height: 2rpx;
    background-color: #667c70;
}
/* 弹出框 */
.popup-content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
}
.comment-input{
    width: 100%;
    background-color: #ccc;
    padding: 10rpx;
}
.comment-submit{
    background-color: #667c70;
    color: #fff;
    border-radius: 20rpx;
    padding: 10rpx;
}

.comment-input-show{
    width: 80%;
}


