.heng{
    width: 90%;
    margin: 20rpx auto;
}

.van-grid-item__content{
    padding: 8px !important;
}

.UCenter-bg {
    background-size: cover;
    height: 350rpx;
    display: flex;
    justify-content: center;
    /* padding: 40rpx 0; */
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
  
  .UCenter-bg text {
    opacity: 0.8;
  }
  
  .UCenter-bg image {
    width: 150rpx;
    height: 150rpx;
  }
  
  .UCenter-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  
  .margin-top-sm {
    font-size: 42rpx;
    font-weight: bold;
  }
  

  
  .text-center {
    background-color: #FFFDF5;
  }
   
  .cu-item {
    background-color: #FFFDF5 !important;
  }
  
  .circular {
    position: absolute;
    top: -15%;
    width: 150vw;
    height: 380rpx;
    border-radius: 50%;
    background-color: #667c70;
  }
  
  .avatar {
    position: relative;
    width: 150rpx;
    height: 150rpx;
    /* border-radius: 50%; */
    /* overflow: hidden; */
    z-index: 99;
  }
  .avatar-img{
      border-radius: 50%;
  }
.avatar .avatar-prize{
    position: absolute;
    right: 0;
    bottom: 0;
    width: 50rpx;
    height: 50rpx;
    z-index: 10;
    border-radius: 50%;
    box-shadow: 2rpx 2rpx 5rpx #fff;
}




  
