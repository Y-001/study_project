/* pages/me/me.wxss */
.container{
    padding-bottom: 100rpx;
    position: relative;
}
.download{
    height: 300rpx;
    width: 100%;
    background-color: #667c70;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.avatar{
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
}
/* 头像下边的部分 */
.cell{
    position: absolute;
    width: 90%;
    left: 50%;
    top: 280rpx;
    transform: translateX(-50%);
}

.shortcut{
    border-radius: 20rpx;
    box-shadow: 0px 0px 10px 0px #ccc;
    background-color: #fff;
    padding: 20rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.shortcut-item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.shortcut-icon{
    width: 60rpx;
    height: 60rpx;
}
.shortcut-text{
    font-size: 28rpx;
}
