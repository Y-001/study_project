<!--pages/store/store.wxml-->
<view class="container">
    <van-search
  shape="round"
  background="#667c70"
  placeholder="搜索"
  disabled
  bindtap="toSearch"
/>

    <view class="body">
        <!-- 轮播图 -->
        <view class="swiper-body">
            <swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{2000}}" duration="{{500}}">
                <block wx:for="{{background}}" wx:key="*this">
                    <swiper-item>
                        <!-- <view class="swiper-item {{item}}"></view> -->
                        <image class="swiper-image" src="{{item}}"></image>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <!-- 热门推荐 -->
        <view class="recommend">
            <view class="rec-title">热门推荐</view>
            <view class="line"></view>
            <view class="rec-list">
                <view wx:for="{{hotBooksList}}" wx:key="index" data-id="{{item._id}}" class="rec-list-item" bindtap="toDetail">
                    <image src="../../images/test_img1.jpg" class="rec-item-img"></image>
                    <text class="rec-item-text">{{item.name}}</text>
                </view>
            </view>
        </view>
        <!-- 分类 -->
        <view class="classify recommend">
            <view class="rec-title">分类</view>
            <view class="line"></view> 
            <view class="classify-list" bindtap="toClassify">
                <view class="classify-list-item">
                    <view class="classify-item-bimg color1">
                        <image class="classify-item-img" src="../../images/store/store-all.png"></image>
                    </view>
                    <text class="classify-item-text">全部</text>
                </view>
                <view class="classify-list-item">
                    <view class="classify-item-bimg color2">
                        <image class="classify-item-img" src="../../images/store/store-bencao.png"></image>
                    </view>
                    <text class="classify-item-text">本草</text>
                </view>
                <view class="classify-list-item">
                    <view class="classify-item-bimg color3">
                        <image class="classify-item-img" src="../../images/store/store-fangyao.png"></image>
                    </view>
                    <text class="classify-item-text">方药</text>
                </view>
                <view class="classify-list-item">
                    <view class="classify-item-bimg color4">
                        <image class="classify-item-img" src="../../images/store/store-zhenjiu.png"></image>
                    </view>
                    <text class="classify-item-text">针灸</text>
                </view>
                <view class="classify-list-item">
                    <view class="classify-item-bimg color5">
                        <image class="classify-item-img" src="../../images/store/store-yijing.png"></image>
                    </view>
                    <text class="classify-item-text">医经</text>
                </view>
                <view class="classify-list-item">
                    <view class="classify-item-bimg color6">
                        <image class="classify-item-img" src="../../images/store/store-yilun.png"></image>
                    </view>
                    <text class="classify-item-text">医论</text>
                </view>
            </view>
        </view>
        <!-- 猜你喜欢 -->
        <view class="like recommend">
            <view class="rec-title">猜你喜欢</view>
            <view class="line"></view>
            <view class="like-list" wx:for="{{books}}" wx:key="index">
                <BookList item="{{item}}" bindtap="toDetail"></BookList>
            </view>
        </view>
    </view>
</view>