/* pages/talkdetail/talkdetail.wxss */

/* 详细内容 */
.talk-item{
    padding: 20rpx 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}
/* 头部 */
.item-top{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}
.item-top-left{
    display: flex;
    align-items: center;
}
.item-top-left .item-img{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.item-top-right .item-icon{
    width: 70rpx;
    height: 70rpx;
}
/* 中间内容部分 */
.item-content-imglist{
    display: flex;
    flex-wrap: wrap;
    margin: 20rpx 0; 
}
.item-content-imglist .item-content-img{
    width: 32%;
    height: 220rpx;
    margin: 5rpx;
}

/* 最底部内容 */
.item-bottom{
    display: flex;
    justify-content: space-between;
}
.item-bottom-left{
    display: flex;
    align-items: center;
}
.time-tag{
    padding: 10rpx;
    background-color: #c4d9b0;
    border-radius: 20rpx;
    margin-right: 10rpx;
}
.item-time{
    font-size: 30rpx;
    color: #666;
}
.item-bottom-iconlist{
    display: flex;
}
.item-bottom-iconlist .item-bottom-iconitem{
    display: flex;
    align-items: center;
}
.item-bottom-iconitem .iconitem-talk{
    width: 45rpx;
    height: 45rpx;
    margin: 0 10rpx;
}

.item-bottom-iconitem .iconitem-num{
    font-size: 30rpx;
}
/* 评论区 */
.talk{
    background-color: #fff;
}
.talk .talk-top{
    display: flex;
    padding: 30rpx;
    justify-content: space-between;
    font-size: 40rpx;
}
.talk-top-right{
    color: #667c70;
}

.talk-avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.talk-content{
    padding: 0 30rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.talk-content-item{
   margin-bottom: 20rpx;
   display: flex;
}
.talk-icon-img{
    width: 40rpx;
    height: 40rpx;
}
.talk-content-right{
    width: 100%;
    padding:0 20rpx;
}
.talk-info{
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #666;
}
.talk-time{
    margin: 10rpx 0;
    color: #666;
    font-size: 28rpx;
}
.talk-comment{
    background-color: #ccc;
    padding: 10rpx;
    margin-top: 15rpx;
    border-radius: 10rpx;
}
.color-name{
    color: #667c70;
}
.talk-comment-list{
    display: flex;
    flex-direction: column;
}
.talk-comment-item{
    font-size: 28rpx;
}
.talk-look-btn{
    font-size: 28rpx;
    padding-top: 10rpx;
}
/* 分割线 */
.comment-line{
    margin-top: 20rpx;
    width: 100%;
    height: 2rpx;
    background-color: #667c70;
}
/* 弹出框 */
.popup-content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
}
.comment-input{
    width: 100%;
    background-color: #ccc;
    padding: 10rpx;
}
.comment-submit{
    background-color: #667c70;
    color: #fff;
    border-radius: 20rpx;
    padding: 10rpx;
}

.comment-input-show{
    width: 80%;
}




