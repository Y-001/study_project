/* pages/search/search.wxss */

.empty-search{

    margin-top: 10rpx;
    padding: 10rpx;
}

.search-log{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.delete-icon{
    width: 45rpx;
    height: 45rpx;
}
.line{
    width: 100%;
    height: 2rpx;
    background-color: #667c70;
    margin: 10rpx 0;
}
.log-list{
    display: flex;
    flex-wrap: wrap;
}
.log-item{
    color: #fff;
    background-color: #86977d;
    padding: 10rpx;
    font-size: 28rpx;
    border-radius: 20rpx;
    margin: 10rpx 15rpx 10rpx 0;
}

/* 搜索结果loading*/
.result-search{
    background-color: #fff;
}
.res-icon{
    width: 38rpx;
    height: 38rpx;
    margin-right: 10rpx;
}
.search-item{
    display: flex;
    align-items: center;
    padding: 15rpx;
}
/* 搜索结果，真正 */
.show{
    background-color: #fff;
    padding: 10rpx 20rpx;
}
.van-tabs .van-tabs__scroll {
    /* background-color: rgba(255, 255, 0, 0); */
    background-color: #c4d9b0;
}


