
.content{
    padding: 0 20rpx 20rpx;
}
.active{
    background-color: #667c70;
    color: #fff;
}

/* 控制组件 */
.control{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0rpx 20rpx 0rpx;
}
.booklet{
    flex: 1.2;
    display: flex;
    justify-content:space-between;
    align-items: center;
}
.bookletwo{
    flex: 1;
    display: flex;
    align-items: center;
}
.booklethree{
    flex: 6;
    display: flex;
    justify-content: space-between;
}

.c-text{
    flex: 1;
    color: #8c8c8c;
    font-size: 32rpx;
}
.b-text{
    color: #696969;
}

.color{
    background-color: pink;
    border-radius: 30rpx;
    width: 23%;
    height: 60rpx;
    color: #fff;
    font-size: 26rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.font-size{
    background-color: #f2f2f2;
    width: 48%;
    border-radius: 30rpx;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.font-line{
    background-color: #f2f2f2;
    width: 30%;
    border-radius: 30rpx;
    height: 60rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.nav{
    flex: 1.2;
    display: flex;
    justify-content:space-between;
    align-items: flex-end;
    
}
.icon{
    width: 40rpx;
    height: 40rpx;
}
.nav-item{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
}
.nav-item .text{
    font-size: 32rpx;
}
.icon-line{
    width: 50rpx;
    height: 50rpx;
}
/* 目录 */

.shelf-top{
    padding: 20rpx;
    height: 20%;
    background-color: #c4d9b0;
    display: flex;
    align-items: center;
}
.book-img{
    /* width: 100%; */
    position: relative;
}
.book-img-text{
    font-size: 30rpx;
    text-align: center;
    /* box-sizing: border-box; */
    background-color: #fff;
    padding: 5rpx;
    position: absolute;
    color: #000;
    z-index: 99;
    writing-mode: vertical-lr;
    width: 30%;
    height: 60%;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    transform: translateY(-50%);
}
 .headimg{
    width: 150rpx;
    height: 200rpx;
    border-radius: 20rpx;
}
.shelf-detail{
    margin-left: 20rpx;
}
.shelf-title{
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.shelf-author{
    padding: 15rpx 0;
    font-size: 32rpx;
}

.shelf-item{
    padding: 25rpx;
}
