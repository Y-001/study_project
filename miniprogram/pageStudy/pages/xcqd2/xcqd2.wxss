.context {
    width: 96%;
    margin: 0 auto;
    padding: 8rpx;
    position: relative;
}
.active{
    background-color: #c4d9b0 !important;
}

/* 签到按钮 */
.qd {
    /* background-color: #667c70; */
    background: linear-gradient(to left top, #d9ebc6, #667c70);
    height: 500rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.info,.btn{
    width: 30%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.info{
    color: #fff;
}
.info-box{
    width: 100%;
    box-sizing: border-box;
    padding: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.info-num{
    font-size: 1.3em;
}
.btn{
    width: 70%;
    position: relative;
    width: 120rpx;
    height: 120rpx;
    background-color: #fff;
    border-radius: 50%;
    color: #667c70;
    border: 20rpx solid rgba(142,162,123, .4);
    box-shadow: 0 0 10rpx 0rpx #c4d9b0;
    animation: move 2s ease-in-out;
    animation-direction: alternate;
    animation-iteration-count: infinite;
}
@keyframes move{
    100%{
        border: 20rpx solid rgba(142,162,123, .8);
        box-shadow: 0 0 10rpx 20rpx #c4d9b0;
    }
}

