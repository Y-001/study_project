/* pages/xcjh/xcjh.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.top{
    width: 95%;
    font-size: 32rpx;
}
.book-list{
    width: 95%;
    display: flex;
    margin: 20rpx 0 32rpx;
    overflow-x: scroll;
    overflow-y: unset;
}
::-webkit-scrollbar {
    /*隐藏滚轮*/
    display: none;
}
.card{
    position: relative;
    margin-right: 20rpx;
}
.active{
    padding: 5rpx;
    border:2rpx solid #667c70;
    border-radius: 20rpx;
}
