/* pageStudy/pages/xcxz/xcxz.wxss */
.title{
    font-size: 40rpx;
    font-weight: bold;
    margin: 20rpx 0;
}
.total{
    font-size: 26rpx;
    color: rgb(149, 149, 149);
    font-weight: normal;
}
.list{
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    padding: 5%;
}
.item{
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-bottom: 40rpx;
}
.img{
    width: 220rpx;
    height: 200rpx;
}
.text{
    font-size: 32rpx;
    padding: 10rpx;
}
.btn{
    width: 60%;
    display: flex;
    justify-content: space-around;
    font-size: 25rpx;
    margin: 10rpx 0;
}
.lq{
    width: 49%;
    background-color: #667c70;
    color: #fff;
    text-align: center;
    padding: 5rpx 0;
    border-radius: 20rpx;
}
.ylq{
    background-color: rgb(167, 165, 165);
}
/* 进度条 */
.progress{
    width: 85%;
    margin: 15rpx 0;
}

