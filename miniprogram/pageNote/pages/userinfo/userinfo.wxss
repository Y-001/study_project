/* pageNote/pages/userinfo/userinfo.wxss */
.container{
    box-sizing: border-box;
    width: 100vw;
}
.top{
    width: 100%;
    height: 350rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.avatar{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}
/* 信息部分 */
.card{
    margin-bottom: 30rpx;
}
.title{
    padding: 10rpx;
    font-size: 30rpx;
    color: #666;
}
.info{
    box-sizing: border-box;
    padding: 15rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
}
.left{
    flex: 1;
}
.right{
    flex: 3;
    color: #666;
    font-size: 35rpx;
}
.btn{
    width: 80%;
    margin: 20rpx auto;
    padding: 15rpx;
    color: #fff;
    text-align: center;
    background-color: #667c70;
    border-radius: 30rpx;
}

