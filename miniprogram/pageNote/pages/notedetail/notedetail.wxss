/* pages/publish/publish.wxss */
.container{
    background-color: #fff;
    height: 100vh;
    /* height: 100%; */
    padding-bottom: 20rpx;
}
/* 弹窗 */
.popup-content{
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}
.popup-item{
    width: 15%;
    height: 80%;
    box-shadow: 0 0 5rpx #ccc;
}
.yifu-active{
    border: 1rpx solid #667c70;
}
/* 顶部 */
.top{
    display: flex;
    justify-content: flex-end;
    padding-top: 20rpx;
}
.top-item{
    width: 50rpx;
    height: 50rpx;
    margin: 0 40rpx;
}

/* 发布内容 */
.content{
    /* background-color: #fff; */
    padding: 20rpx;
}
.title{
    /* box-sizing: border-box; */
    padding: 10rpx;
    font-size: 45rpx;
    color: #000;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
}
.body{
    /* margin: 20rpx 0; */
    color: #666;
    font-size: 32rpx;
}
.date{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #000;
    margin: 30rpx 0 40rpx;
}
.data-time{
    margin: 0 15rpx;
}
/* 添加图片 */
.upload{
    padding-top: 20rpx;
}

.upload-top{
    display: flex;
    justify-content: space-between;
}

.upload-list{
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.upload-list .default{
    width: 33%;
    height: 230rpx;
}
.img-list{
    width: 33%;
    height: 230rpx;
    position: relative;
}

.img-list .common{
    width: 100%;
    height: 100%;
}

.img-list .delete{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: 0;
    right: 0;
    z-index: 99;
}

/* 底部部分 选择分类 */
.select .text{
    margin: 20rpx 0;
}
.select-list{
    display: flex;
    /* justify-content: space-evenly; */
    flex-wrap: wrap;
}
.select-list .select-item{
    margin-right: 10rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    border: 1rpx solid #667c70;
    padding: 10rpx;
    color: #667c70;
    width: 15%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.select-list .selected{
    border: 1rpx solid #667c70;
    background-color: #667c70;
    color: #fff;
}
.classify-input{
    border: 1rpx solid #ccc;
    padding: 5rpx;

}
