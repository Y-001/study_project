.tabbar{
    width: 100%;
    display: flex;
    background-color: #667c70;
    position: fixed;
    bottom: 0;
    padding-bottom: env(safe-area-inset-bottom);
    padding-top: 10rpx;
}

.tabbar-item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.tabbar-item image{
    width: 50rpx;
    height: 50rpx;
}

.tabbar-item text{
    font-size: 26rpx;
    color: #fff;
}

.tabbar-item .publish{
    width: 80rpx;
    height: 80rpx;
    background-color: #fff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: auto;
}

.tabbar-item .publish .que{
    width: 65rpx;
    height: 65rpx;
}



